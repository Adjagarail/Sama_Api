{# templates/vich_uploader_image.html.twig #}
<a
    class="easyadmin-thumbnail" data-featherlight-close-on-click="anywhere" data-featherlight="#easyadmin-lightbox-{{ item.id }}" href="#">
    {# the second parameter is the name of the property with the UploadableField annotation #}
    <img src="{{ vich_uploader_asset(item, 'Image') }}"></a>
    <div
        id="easyadmin-lightbox-{{ item.id }}" class="easyadmin-lightbox">
        {# the second parameter is the name of the property with the UploadableField annotation #}
        <img src="{{ vich_uploader_asset(item, 'Image') }}"></div>
    